{
  "name": "AD Hater",
  "description": "Block advertising posts and sidebars",
  "version": "1.0",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "144": "144x144.png"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "contextMenus", "storage"
  ],
  "browser_action": {
      "default_title": "ADHater",
      "default_popup": "popup.html"
  },
    "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
