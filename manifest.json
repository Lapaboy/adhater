{
  "name": "Lapka VK",
  "description": "Плюшечки для завсегдатаев соцсети",
  "version": "1.09",
  "icons": {
    "16": "favicons/16x16.png",
    "32": "favicons/32x32.png",
    "48": "favicons/48x48.png",
    "144": "favicons/144x144.png"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "contextMenus", "storage",  "webRequest", "webRequestBlocking"
  ],
  "browser_action": {
      "default_title": "Lapka VK",
      "default_popup": "popup.html"
  },
    "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
